@page
@model IndexModel
@{
    ViewData["Title"] = "PlayPrivacy";
}

<div class="text-center">
    <form name="vote" method="post">
        <div class="form-group">
            <button type="submit" class="btn btn-primary w-25" asp-page-handler="VoteYes" value="yes">Yep</button>
            <button type="submit" class="btn btn-secondary w-25" asp-page-handler="VoteNo" value="no">Nope</button>
            <br />
            <br />
            <button type="submit" class="btn btn-primary w-25" asp-page-handler="ShowResult">Ergebnis</button>
        </div>
    </form>

    <h3>@Model.Message</h3>

    <form name="reset" method="post">
        <div class="form-group">
            <button type="submit" class="btn btn-danger w-25" style="margin-top: 200px" asp-page-handler="Reset">Reset</button>
        </div>
    </form>

</div>